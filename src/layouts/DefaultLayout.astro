---
import '../styles/tailwind.css'
import '../assets/scss/index.scss'
import SiteMeta from '@components/SiteMeta.astro'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
import { ClientRouter } from 'astro:transitions'

const {
  title = 'Accessible Astro',
  description = 'A starter project...',
  url = Astro.site,
  image = 'social-preview-image.png',
  author = 'Incluud',
} = Astro.props
---

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <SiteMeta title={title} description={description.substring(0, 100)} url={url} image={image} author={author} />
    <ClientRouter />
  </head>
  <body>
    <div id="vanta-bg-fixed"></div>

    <Header />
    
    <main id="main-content" transition:animate="fade">
      <slot />
    </main>

    <Footer />

    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.waves.min.js"></script>

    <script is:inline>
      function initVanta() {
        if (window.VANTA) {
          window.VANTA.WAVES({
            el: "#vanta-bg-fixed",
            mouseControls: true,
            touchControls: true,
            gyroControls: false,
            minHeight: 200.00,
            minWidth: 200.00,
            scale: 1.00,
            scaleMobile: 1.00,
            color: 0x0f365c, 
            shininess: 44.00,
            waveHeight: 22.00,
            waveSpeed: 0.55,
            zoom: 0.71
          })
        }
      }
      initVanta();
      // This is crucial for ClientRouter (View Transitions)
      document.addEventListener('astro:after-swap', initVanta);
    </script>
  </body>


<style lang="scss" is:global>
  @use '../assets/scss/base/mixins' as *;

  /* 4. MAKE THE BACKGROUND FIXED */
  #vanta-bg-fixed {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: -1; /* Keep it behind everything */
    pointer-events: none; /* Let clicks pass through to buttons */
  }

  html, body {
    height: 100%;
    background-color: transparent; /* Allow waves to show through */
  }

  body {
    display: flex;
    flex-direction: column;
    overflow-x: clip;
    background: transparent !important;

    main {
      flex: 1 0 auto;
      background: transparent !important;
    }
  }
  
  // Ensure sections don't have solid backgrounds
  section {
    background: transparent !important;
  }
</style>