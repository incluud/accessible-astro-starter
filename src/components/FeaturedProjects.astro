---
import { Heading, Link } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'
import { getCollection } from 'astro:content'
import { Image } from 'astro:assets'

// Import images
import projectImage1 from '@assets/images/projects/project-image-1.jpg' 
import projectImage2 from '@assets/images/projects/project-image-2.jpg'
import projectImage3 from '@assets/images/projects/project-image-3.jpg'

const { class: className, limit = 3, title = 'Project_Archive' } = Astro.props

const projects = await getCollection('projects')
// Map the imported images to an array to reference them by index in the loop
const projectImages = [projectImage1, projectImage2, projectImage3]
---

<section class:list={[className, 'my-64 px-6 md:px-12 lg:px-20 overflow-hidden']}>
  <div class="mx-auto w-full max-w-[1800px]">
    
    <div class="flex items-center gap-6 mb-16 group">
      <span class="font-mono text-[10px] uppercase tracking-[0.6em] text-gray-400 dark:text-gray-500 whitespace-nowrap">
        03 // FIELD_STUDIES
      </span>
      <div class="h-[1px] w-full bg-black/10 dark:bg-white/20 transition-all duration-700 group-hover:bg-primary-500"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-end mb-32">
      <div class="lg:col-span-9">
        <h2 class="text-7xl md:text-9xl lg:text-[11rem] font-black tracking-[-0.04em] uppercase leading-[0.75] text-gray-900 dark:text-white">
          Selected <br class="hidden md:block" /> 
          <span class="text-primary-500">Projects</span><span class="text-gray-300 dark:text-white/20">.</span>
        </h2>
      </div>
      
      <div class="lg:col-span-3 pb-4">
        <div class="border-l-[1px] border-black/10 dark:border-white/20 pl-8 space-y-4">
          <div class="font-mono text-[10px] text-primary-500 uppercase tracking-widest">
            Total_Records: {projects.length}
          </div>
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400 leading-relaxed">
            Projects in automation, predictive modeling, and system architecture.
          </p>
        </div>
      </div>
    </div>

    <div class="space-y-48">
      {
        projects.slice(0, limit).map((project, index) => (
          <div class="group grid grid-cols-1 lg:grid-cols-12 gap-12 items-start">
            
            <div class="lg:col-span-2 font-mono pt-4">
              <span class="text-6xl font-black text-gray-200 dark:text-white/10 group-hover:text-primary-500 transition-all duration-500">
                0{index + 1}
              </span>
              <div class="mt-8 space-y-3 text-[10px] uppercase tracking-[0.2em] text-gray-400 dark:text-gray-500">
                <p class="flex items-center gap-2">
                  <span class="w-1 h-1 bg-primary-500"></span>
                  {project.data.category || 'System_Build'}
                </p>
                <p class="flex items-center gap-2">
                  <span class="w-1 h-1 bg-white/20"></span>
                  Verified_2025
                </p>
              </div>
            </div>

            <div class="lg:col-span-5 relative overflow-hidden bg-gray-100 dark:bg-[#0a0a0a] rounded-sm shadow-2xl">
              <a href={`${import.meta.env.BASE_URL}/portfolio/${project.id}`} class="block overflow-hidden">
                <Image 
                  src={projectImages[index] || projectImage1} 
                  alt={project.data.title}
                  class="w-full h-[500px] object-cover filter grayscale contrast-125 hover:grayscale-0 transition-all duration-700 scale-105 hover:scale-100"
                />
              </a>
              <div class="absolute top-6 left-6 w-6 h-6 border-t border-l border-white/30"></div>
              <div class="absolute bottom-6 right-6 w-6 h-6 border-b border-r border-white/30"></div>
            </div>

            <div class="lg:col-span-5 flex flex-col justify-center h-full pt-4">
              <h3 class="text-4xl md:text-6xl font-black tracking-tighter mb-8 text-gray-900 dark:text-white group-hover:text-primary-500 transition-colors">
                {project.data.title}
              </h3>
              <p class="text-xl md:text-2xl text-gray-500 dark:text-gray-400 leading-tight mb-12 max-w-xl">
                {project.data.description}
              </p>
              <div class="mt-auto">
                <Link 
                  href={project.data.link || `${import.meta.env.BASE_URL}/portfolio/${project.id}`} 
                  style="color: #9ca3af !important; border-bottom: 1px solid #4b5563 !important; display: inline-flex; align-items: center; gap: 1rem; text-decoration: none;"
                  class="analyze-link font-mono text-xs uppercase tracking-[0.3em] pb-2 transition-all"
                >
                  Analyze_Project 
                  <Icon name="lucide:arrow-right" class="w-4 h-4" style="color: #9ca3af !important;" />
                </Link>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-48 pt-16 border-t border-black/10 dark:border-white/10 flex justify-between items-center">
      <Link href={`${import.meta.env.BASE_URL}/portfolio`} isButton animateOnHover animationType="nudge">
        View_Full_Directory
        <Icon aria-hidden="true" name="lucide:arrow-right" size="1.5rem" />
      </Link>
      <span class="font-mono text-[10px] text-gray-400 dark:text-gray-600 uppercase tracking-widest hidden md:block">
        [ End_Of_Featured_Records ]
      </span>
    </div>
  </div>
</section>

<style>
  h2, h3 {
    text-wrap: balance;
  }
</style>