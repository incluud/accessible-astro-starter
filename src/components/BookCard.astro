---
import { Image } from 'astro:assets';
const { title, description, tags, url, featuredImage } = Astro.props;
---

<a href={url} class="book-card group">
  <div class="image-harness">
    {featuredImage && (
      <Image 
        src={featuredImage} 
        alt={title} 
        width={600} 
        height={800} 
        class="actual-img"
      />
    )}
    <div class="bracket top-l"></div>
    <div class="bracket bot-r"></div>
  </div>

  <div class="content">
    <div class="header-meta">
      <span class="meta-label">Literature_Archive</span>
      <h3 class="title">{title}</h3>
    </div>
    
    <p class="description line-clamp-3">{description}</p>
    
    <div class="tags">
      {tags.map((tag: string) => (
        <span class="tag-badge">{tag}</span>
      ))}
    </div>
  </div>
</a>

<style>
  .book-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    height: 100%; /* Important: Card fills the grid cell */
    position: relative;
    
    /* Glass Theme - Matching Projects */
    background-color: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .book-card:hover {
    transform: translateY(-5px);
    border-color: #ffffff;
    background-color: rgba(255, 255, 255, 0.08);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  /* Image Logic */
  .image-harness {
    position: relative;
    width: 100%;
    aspect-ratio: 3 / 4; /* Standardized for all cards */
    overflow: hidden;
    background-color: #0a0a0a;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .actual-img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Prevents squishing */
    filter: grayscale(1) brightness(0.7);
    transition: all 0.7s ease;
  }

  .book-card:hover .actual-img {
    filter: grayscale(0) brightness(1);
    transform: scale(1.05);
  }

  /* Content Logic - Same Padding as Projects */
  .content {
    padding: 2rem; 
    display: flex;
    flex-direction: column;
    flex-grow: 1; /* Fills remaining space */
  }

  .meta-label {
    font-family: ui-monospace, monospace;
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgba(255, 255, 255, 0.4);
  }

  .title {
    font-size: 1.5rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    margin-top: 0.5rem;
    margin-bottom: 1rem;
    line-height: 1.1;
    color: #ffffff;
  }

  .description {
    font-size: 0.95rem;
    line-height: 1.6;
    color: #a1a1aa;
    margin-bottom: 2rem;
    flex-grow: 1; /* Pushes tags to the bottom */
  }

  /* Tags - Monochrome Industrial */
  .tags {
    margin-top: auto;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag-badge {
    font-family: ui-monospace, monospace;
    font-size: 0.65rem;
    padding: 0.3rem 0.6rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.03);
    color: #ffffff;
    text-transform: uppercase;
  }

  .book-card:hover .tag-badge {
    border-color: #ffffff;
  }

  /* Brackets */
  .bracket {
    position: absolute;
    width: 10px;
    height: 10px;
    border-color: rgba(255, 255, 255, 0.2);
    transition: all 0.4s ease;
  }
  .top-l { top: 1rem; left: 1rem; border-top: 1px solid; border-left: 1px solid; }
  .bot-r { bottom: 1rem; right: 1rem; border-bottom: 1px solid; border-right: 1px solid; }

  .book-card:hover .bracket {
    border-color: #ffffff;
  }
</style>