---
import { Image } from 'astro:assets';
import { Badge } from 'accessible-astro-components';

const { title, description, featuredImage, tags, author } = Astro.props;
---

<div class="book-card group">
  <div class="cover-container">
    <Image 
      src={featuredImage} 
      alt={`Cover for ${title}`} 
      width={400} 
      height={600}
      class="book-image"
    />
  </div>

  <div class="content">
    <h3 class="title">{title}</h3>
    {/* Added a class so we can style the author specifically */}
    <p class="author-text">{author}</p> 
    <p class="description">{description}</p>
    <div class="tags">
      {tags.map((tag: string) => (
        <Badge>{tag}</Badge>
      ))}
    </div>
  </div>
</div>

<style>
  .book-card {
    display: flex;
    flex-direction: column;
    max-width: 300px;
    height: 100%;
    padding: 1rem;
    border-radius: 1rem;
    
    /* This sets a white background with 10% opacity */
    background-color: rgba(255, 255, 255, 0.1); 
    
    /* This gives it a border so you can see the shape */
    border: 1px solid rgba(255, 255, 255, 0.2);
    
    /* This blurs whatever is behind the card */
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    
    transition: all 0.3s ease;
  }

  .book-card:hover {
    /* Slightly more visible on hover */
    background-color: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .cover-container {
    position: relative;
    aspect-ratio: 2 / 3; /* The secret for book shapes */
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background: var(--background-color);
  }

  .book-card:hover .cover-container {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1);
  }

  .book-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    color: white;
    font-weight: bold;
  }

  .book-card:hover .overlay {
    opacity: 1;
  }

  .content {
    padding-top: 1rem;
    flex-grow: 1;
    display: flex;          
    flex-direction: column;
  }

  .title {
    font-size: 1.25rem;
    font-weight: bold;
    margin: 0.5rem 0;
    line-height: 1.2;
  }

  .description {
    font-size: 0.875rem;
    color: #d8d5d5;
    display: -webkit-box;
    -webkit-line-clamp: 3; /* Cuts off text after 3 lines */
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tags {
    display: flex;
    margin-top: auto;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
</style>